kind: ServiceAccount
apiVersion: v1
metadata:
  name: {{.Name}}

---
apiVersion: apps/v1
kind: Deployment
metadata:
  creationTimestamp: null
  name: {{.Name}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{.Name}}
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 50%
    type: RollingUpdate
  template:
    metadata:
      annotations:
        config.linkerd.io/skip-outbound-ports: "4222,5432,6379,443,80"
        linkerd.io/inject: enabled
      creationTimestamp: null
      labels:
        app: {{.Name}}
    spec:
      serviceAccountName: {{.Name}}
      containers:
        - name: {{.Name}}
          image: {{.Name}}:latest
          imagePullPolicy: IfNotPresent
          # env:
          #   - name: NATS_CLUSTER
          #     value: "stan:4222"
          ports:
            - containerPort: 9200
              name: grpc-port
status: {}

---
apiVersion: v1
kind: Service
metadata:
  name: {{.Name}}
spec:
  selector:
    app: {{.Name}}
  clusterIP: None
  ports:
    - name: grpc
      port: 9200
      targetPort: grpc-port
